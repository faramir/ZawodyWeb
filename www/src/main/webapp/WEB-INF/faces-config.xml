<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC
"-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
"http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
    <application>
        <message-bundle>pl.umk.mat.zawodyweb.www.Messages</message-bundle>
        <locale-config>
            <default-locale>pl_PL</default-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>sessionBean</managed-bean-name>
        <managed-bean-class>pl.umk.mat.zawodyweb.www.SessionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>requestBean</managed-bean-name>
        <managed-bean-class>pl.umk.mat.zawodyweb.www.RequestBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <display-name>register_to_login</display-name>
        <from-view-id>/register.jspx</from-view-id>
        <navigation-case>
            <from-outcome>
                login
            </from-outcome>
            <to-view-id>
                /login.jspx
            </to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>login_to_index</display-name>
        <from-view-id>/login.jspx</from-view-id>
        <navigation-case>
            <from-outcome>
                start
            </from-outcome>
            <to-view-id>
                /start.jspx
            </to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
      <navigation-rule>
        <display-name>editcontest_to_index</display-name>
        <from-view-id>/admin/editcontest.jspx</from-view-id>
        <navigation-case>
            <from-outcome>
                start
            </from-outcome>
            <to-view-id>
                /start.jspx
            </to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>select_contest</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>
                start
            </from-outcome>
            <to-view-id>
                /start.jspx
            </to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>

